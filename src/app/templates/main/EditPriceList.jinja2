{% extends '__base.jinja2' %}

{% block content %}
    <form action="#" method="POST">
        {{ form.hidden_tag() }}
        {{ form.csfr_token }}
        {{ form.opts}}
        <ul>
        <% for error in form.opts.errors%>
            <li>{{error}}</li>
            <% endfor %>
        </ul>
        {{ form.price.label }}
        {{ form.price(value=price_to_update.price)}}
        <br
        {{ form.submit }}
    </form>
{% endblock %} {# End of block content #}